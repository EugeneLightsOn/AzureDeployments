{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerGroups_toolkit_app_name": {
            "defaultValue": "toolkit-app",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2023-05-01",
            "name": "[parameters('containerGroups_toolkit_app_name')]",
            "location": "canadacentral",
            "properties": {
                "sku": "Standard",
                "containers": [
                    {
                        "name": "[parameters('containerGroups_toolkit_app_name')]",
                        "properties": {
                            "image": "ghcr.io/cohere-ai/cohere-toolkit:pr-152",
                            "ports": [
                                {
                                    "protocol": "TCP",
                                    "port": 80
                                },
                                {
                                    "protocol": "TCP",
                                    "port": 4000
                                },
                                {
                                    "protocol": "TCP",
                                    "port": 8000
                                }
                            ],
                            "environmentVariables": [
                                {
                                    "name": "NEXT_PUBLIC_API_HOSTNAME",
                                    "value": "[concat('http://', parameters('containerGroups_toolkit_app_name'), '.canadacentral.azurecontainer.io:8000')]"
                                },
                                {
                                    "name": "PORT",
                                    "value": "4000"
                                },
                                {
                                    "name": "COHERE_API_KEY"
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "memoryInGB": 8,
                                    "cpu": 4
                                }
                            }
                        }
                    }
                ],
                "initContainers": [],
                "imageRegistryCredentials": [
                    {
                        "server": "ghcr.io",
                        "username": "EugeneLightsOn"
                    }
                ],
                "restartPolicy": "OnFailure",
                "ipAddress": {
                    "ports": [
                        {
                            "protocol": "TCP",
                            "port": 80
                        },
                        {
                            "protocol": "TCP",
                            "port": 4000
                        },
                        {
                            "protocol": "TCP",
                            "port": 8000
                        }
                    ],
                    "type": "Public",
                    "dnsNameLabel": "[parameters('containerGroups_toolkit_app_name')]",
                    "autoGeneratedDomainNameLabelScope": "Unsecure"
                },
                "osType": "Linux"
            }
        }
    ]
}