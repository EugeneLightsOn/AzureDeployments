{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "availabilityZones": {
            "type": "array",
            "defaultValue": []
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "containerName": {
            "type": "string",
            "defaultValue": "cohere-toolkit"
        },
        "imageType": {
            "type": "string",
            "allowedValues": [
                "Public",
                "Private"
            ],
            "defaultValue": "Private"
        },
        "imageName": {
            "type": "string",
            "defaultValue": "ghcr.io/cohere-ai/cohere-toolkit:pr-152"
        },
        "osType": {
            "type": "string",
            "allowedValues": [
                "Linux",
                "Windows"
            ],
            "defaultValue": "Linux"
        },
        "numberCpuCores": {
            "type": "string",
            "defaultValue": "3"
        },
        "memory": {
            "type": "string",
            "defaultValue": "8"
        },
        "restartPolicy": {
            "type": "string",
            "allowedValues": [
                "OnFailure",
                "Always",
                "Never"
            ],
            "defaultValue": "OnFailure"
        },
        "sku": {
            "type": "string",
            "allowedValues": [
                "Standard",
                "Confidential"
            ],
            "defaultValue": "Standard"
        },
        "imageRegistryLoginServer": {
            "type": "string",
            "defaultValue": "ghcr.io"
        },
        "imageUsername": {
            "type": "string",
            "defaultValue": "EugeneLightsOn"
        },
        "imagePassword": {
            "type": "secureString"
        },
        "environmentVariable0": {
            "type": "secureString"
        },
        "environmentVariable1": {
            "type": "string",
            "defaultValue": "http://toolkit-app.canadacentral.azurecontainer.io:8000"
        },
        "env_fe_port": {
            "type": "string",
            "defaultValue": "4000"
        },
        "ipAddressType": {
            "type": "string",
            "allowedValues": [
                "Public",
                "Private"
            ],
            "defaultValue": "Public"
        },
        "ports": {
            "type": "array",
            "defaultValue": [
                {
                    "port": 8000,
                    "protocol": "TCP"
                },
                {
                    "port": 4000,
                    "protocol": "TCP"
                }
            ]
        },
        "dnsNameLabel": {
            "type": "string",
            "defaultValue": "toolkit-app"
        },
        "autoGeneratedDomainNameLabelScope": {
            "type": "string",
            "defaultValue": "Unsecure"
        }
    },
    "resources": [
        {
            "location": "[parameters('location')]",
            "name": "[parameters('containerName')]",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2021-09-01",
            "zones": "[parameters('availabilityZones')]",
            "properties": {
                "containers": [
                    {
                        "name": "[parameters('containerName')]",
                        "properties": {
                            "image": "[parameters('imageName')]",
                            "resources": {
                                "requests": {
                                    "cpu": "[int(parameters('numberCpuCores'))]",
                                    "memoryInGB": "[float(parameters('memory'))]"
                                }
                            },
                            "environmentVariables": [
                                {
                                    "name": "COHERE_API_KEY",
                                    "secureValue": "[parameters('environmentVariable0')]"
                                },
                                {
                                    "name": "NEXT_PUBLIC_API_HOSTNAME",
                                    "value": "[parameters('environmentVariable1')]"
                                },
                                {
                                    "name": "PORT",
                                    "value": "[parameters('env_fe_port')]"
                                }
                            ],
                            "ports": "[parameters('ports')]"
                        }
                    }
                ],
                "restartPolicy": "[parameters('restartPolicy')]",
                "osType": "[parameters('osType')]",
                "sku": "[parameters('sku')]",
                "imageRegistryCredentials": [
                    {
                        "server": "[parameters('imageRegistryLoginServer')]",
                        "username": "[parameters('imageUsername')]",
                        "password": "[parameters('imagePassword')]"
                    }
                ],
                "ipAddress": {
                    "type": "[parameters('ipAddressType')]",
                    "ports": "[parameters('ports')]",
                    "dnsNameLabel": "[parameters('dnsNameLabel')]",
                    "autoGeneratedDomainNameLabelScope": "[parameters('autoGeneratedDomainNameLabelScope')]"
                }
            },
            "tags": {}
        }
    ]
}